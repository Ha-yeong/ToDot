<!DOCTYPE html>
<html>
    <head>
        <title>To.</title>
        <link rel='stylesheet' href='./stylesheets/style_mainpage.css' />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js"></script>
        <meta charset="utf-8" />
    </head>
    <body>
        <!--
Left Sidebar 
<div id="sidebar" class="sidebar"></div>
-->
        <div class="mail-client">
            <section class="mail-client__left">
                <button class="new-message-btn"><span class="icon fa fa-edit"></span><span>투-닷-</span></button>
                <section class="mail-client__labels">
                    <span class="mail-client__labels__title">Menu</span>
                    <div class="mail-client__labels__item">
                        <span class="text">새 글 작성</span>
                    </div>
                    <div class="mail-client__labels__item">
                        <span class="text">내 글</span>
                    </div>
                    <div class="mail-client__labels__item">
                        <span class="text">커뮤니티</span>
                    </div>
                    <div class="mail-client__labels__item">
                        <span class="text">쪽지</span>
                    </div>
                    <div class="mail-client__labels__item">
                        <span class="text">분석</span>
                    </div>
                </section>
            </section>
            <section class="mail-client__center">
                <div class="mail-client__sort-by">
                    <span class="sort-by">Sort by </span><span class="date">Date</span><span class="icon fa fa-caret-down"></span>
                </div>
                <div class="mail-client__email-list">
                   <%for (var i = 0; i < posts.length; i++) {%>
                    <article class="mail-client__email-item">
                        <span class="mail-client__email-item__time">20:24</span><span class="mail-client__email-item__mark"></span><span class="mail-client__email-item__circle fa fa-circle"></span>
                        <h5 class="mail-client__email-item__from">
                            <%= posts[i].title %>
                        </h5>
                        <p class="mail-client__email-item__preview">
                            <%= posts[i].content %>
                        </p>
                    </article>
                    <% } %>
                    
                </div>
            </section>
            <section class="mail-client__right">
                <div class="mail-client__right__up-section">
                    <div class="mail-client__email-actions">
                        <span class="icon fa fa-trash"></span><span class="icon fa fa-mail-reply"></span><span class="icon fa fa-mail-reply-all"></span><span class="icon fa fa-long-arrow-right"></span><span class="icon fa fa-ellipsis-h"></span>
                    </div>
                    <div class="mail-client__search-container">
                        <span class="icon fa fa-search"></span><input class="mail-client__search-box" placeholder="Search" type="text" />
                    </div>
                </div>
                <div class="mail-client__email-detail">
                    <span class="mail-client__email-detail__time">14:10</span>
                    <h4 class="mail-client__email-detail__title">
                    </h4>
                    <div class="mail-client__email-detail__description">
                        <p>
                        </p>
                    </div>
                    <div class="mail-client__email-detail__response-container">
                        <div class="mail-client__email-detail__actions">
                        </div>
                        <h5 style="padding-bottom: 10px;">Enter a response</h5>
                        <textarea class="mail-client__email-detail__response" cols="30" name="" rows="10"></textarea>
                    </div>
                </div>
                <button class="mail-client__send-button">Send</button>
            </section>
        </div>
        <script src="script_mainpage.js"></script>
    </body>
</html>